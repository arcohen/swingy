CREATE TABLE `heroes` (
  `Id` int(11) NOT NULL AUTO_INCREMENT KEY,
  `Name` varchar(255) NOT NULL,
  `Attack` int(11) NOT NULL,
  `Defense` int(11) NOT NULL,
  `HitPoints` int(11) NOT NULL,
  `Level` int(11) NOT NULL DEFAULT '1',
  `XP` int(11) NOT NULL DEFAULT '1000'
)



